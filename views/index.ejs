<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  <title>Document</title>
</head>
<style>
    .mainPage {
        background-color:rgb(1, 10, 8);
    }
    .title{
        color:white;
        margin-top: 2rem;
        text-align: center;
    }
    .btn{
        width: 20%;
        margin-left:  25.3rem;
        margin-top: 3rem;
    }
    .table{
        margin-top: 7rem;
    }
    .row-heading{
        color: white;
    }
    .form-control{
        margin-top:1.2rem
    }
    .dashboard{
        margin-left: 2.3rem;
        margin-top: 1.2rem;
    }
    .dashboard-title{
      color:white;
    }
</style>
<body class="mainPage">
  <div class="container">
    <h1 class="title">URL Shorter App</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline" top="18px">
      <input required placeholder="Enter a Url" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
    </form>
    <button class="btn btn-success" type="submit">Click to generate</button>


    <h2 class="dashboard-title">Details </h2>
    
    <table class="table table-striped table-responsive">
      <thead>
        <tr class="row-heading">
          <th>Full URL</th>
          <th>Short URL</th>
          <th>No of Clicks</th>
        </tr>
      </thead>
      <tbody>
        <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td><%= shortUrl.clicks %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

</body>
</html>